.item.addbtn .icon_add{
    width: 210rpx;
    height: 210rpx;
    border: 1px solid #999;
    padding-top:40rpx;
    box-sizing: border-box;
}
.item.addbtn .icon_add image{
    width: 100rpx;
    height: 100rpx;
    border:none;
}
.item.addbtn .txt{
    font-size: 32rpx;
    color:#999;
}
.item-move {
    display: inline-block;
    width: 250rpx;
    height: 250rpx;
    box-sizing: border-box;
    border: 1px dashed #999;
    background: rgba(0,0,0,.1);
}
