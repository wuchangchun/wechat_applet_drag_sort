form{
    display: block;
    padding-bottom: 1px;
}
.inner {
    /* height: 400rpx; */
    width: 750rpx;
    
    margin: 0 auto;
    /* background: #aaa; */
}

movable-area {
    width: 100%;
    height: 100%;
}

.item {
    display: inline-block;
    vertical-align: top;
    width: 250rpx;
    height: 250rpx;
    /* border: 1px solid red; */
    text-align: center;
    /* line-height: 250rpx; */
    box-sizing: border-box;
    position: relative;
    padding: 20rpx;
}
/** 点中移动的样式 **/
.item.move{
    opacity: .1;
}
.item image{
    width: 210rpx;
    height: 210rpx;
    /* border:1px solid red; */
    box-sizing: border-box;
}
/** 删除按钮 */
.item .delBtn{
    position: absolute;
    left: 20rpx;
    right: 20rpx;
    bottom: 20rpx;
    background: rgba(0,0,0,.5);
    color:#fff;
    font-size: 28rpx;
    height: 50rpx;
    line-height: 50rpx;
}
